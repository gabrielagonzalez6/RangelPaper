
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8">
        <div class="card">
          <div class="header">
              <h4 class="title">Datos del Modelo</h4>
          </div>
          <div class="content">
              <ul class="list-unstyled team-members">
                <li>
                    <div class="row">
                        <div class="col-xs-6">
                            Nombre
                            <br />
                            <span class="text-primary"><small> <%= @model.name  %></small></span>
                        </div>
                        <div class="col-xs-6">
                            Categoría
                            <br />
                            <span class="text-primary"><small> <%= @model.category.name %></small></span>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="row">
                        <div class="col-xs-12">
                            Descripción
                            <br />
                            <span class="text-primary"><small> <%= @model.description %></small></span>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="row">
                    	<div class="col-xs-6">
                            <%= link_to 'Edit', edit_model_path(@model), class: "btn btn-info btn-fill" %>
                        </div>
                        <div class="col-xs-6">
                            <%= link_to 'Back', models_path, class: "btn btn-info btn-fill" %>
                        </div>
                    </div>
                </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>