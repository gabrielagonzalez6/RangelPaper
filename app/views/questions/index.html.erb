
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="header">
            <h4 class="title">Preguntas Frecuentes</h4>
            <p class="category">Sección Preguntas Frencuentes de Pagina Principal</p>
          </div>
          <div class="content table-responsive table-full-width">
            <%if @questions.empty?  %>
              <div class="alert alert-warning">
                  <span><b> Alerta - </b> No existen preguntas</span>
              </div>
            <% else %>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Pregunta</th>
                    <th>Respuesta</th>
                    <th colspan="3">Acción</th>
                  </tr>
                </thead>

                <tbody>
                  <% @questions.each do |question| %>
                    <tr>
                      <td><%= question.question %></td>
                      <td><%= question.answer %></td>
                      <td><%= link_to 'Show', question, class: "btn btn-info btn-fill" %></td>
                      <td><%= link_to 'Edit', edit_question_path(question), class: "btn btn-info btn-fill" %></td>
                      <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info btn-fill" %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            <% end %>

            <%= link_to 'New Question', new_question_path, class: "btn btn-info btn-fill" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>