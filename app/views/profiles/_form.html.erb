<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4 col-md-5">
        <div class="card card-user">
            <div class="image">
              
            </div>
            <div class="content">
                <div class="author">
                
                  <h4 class="title">Chet Faker<br />
                      <a href="#"><small>@chetfaker</small></a>
                  </h4>
                </div>
                <p class="description text-center">
                                    "I like the way you work it <br>
                                    No diggity <br>
                                    I wanna bag it up"
                </p>
            </div>
        </div>
        <div class="card">
            <div class="header">
                <h4 class="title">Redes Sociales</h4>
            </div>
            <div class="content">
              
              <%= render template: "social_networks/index" %>

            </div>
        </div>
      </div>
      <div class="col-lg-8 col-md-7">
          <div class="card">
              <div class="header">
                  <h4 class="title">Perfil</h4>
              </div>
              <div class="content">
                  <%= form_for(profile) do |f| %>

                      <% if profile.errors.any? %>
                        <div id="error_explanation">
                          <div class="alert alert-danger">
                            <span><b> Error - </b> </span>
                            <ul>
                            <% profile.errors.messages.values.each do |message| %>
                              <% message.each do |m| %>
                                <li><%= m %></li>
                              <% end %>
                            <% end %>
                            </ul>
                          </div> 
                        </div>
                      <% end %>

                      <div class="row">
                          <div class="col-md-6">
                              <div class="form-group">
                                  <div class="field">
                                    <label>Nombre</label>
                                    <%= f.text_field :name, class: "form-control border-input" %>
                                  </div>
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                  <div class="field">
                                    <label>Apellido</label>
                                    <%= f.text_field :lastname, class: "form-control border-input" %>
                                  </div>
                              </div>
                          </div>
                      </div>

                      <div class="row">
                          <div class="col-md-6">
                              <div class="form-group">
                                  <div class="field">
                                    <label>E-mail</label>
                                    <%= f.text_field :email, class: "form-control border-input" %>
                                  </div>
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                  <div class="field">
                                    <label>Contraseña</label>
                                    
                                  </div>
                              </div>
                          </div>
                      </div>

                      <div class="row">
                          <div class="col-md-4">
                              <div class="form-group">
                                  <div class="field">
                                    <label>Teléfono</label>
                                    <%= f.text_field :phone, class: "form-control border-input" %>
                                  </div>
                              </div>
                          </div>
                          <div class="col-md-4">
                              <div class="form-group">
                                  <div class="field">
                                    <label>Ciudad</label>
                                    <%= f.text_field :city, class: "form-control border-input" %>
                                  </div>
                              </div>
                          </div>
                          <div class="col-md-4">
                              <div class="form-group">
                                  <div class="field">
                                    <label>País</label>
                                    <%= f.text_field :country, class: "form-control border-input" %>
                                  </div>
                              </div>
                          </div>
                      </div>

                      <div class="row">
                          <div class="col-md-12">
                              <div class="form-group">
                                  <div class="field">
                                    <label>Dirección</label>
                                    <%= f.text_field :address, class: "form-control border-input" %>
                                  </div>
                              </div>
                          </div>
                      </div>

                      <div class="field">
                        <%= f.label :user_id %>
                        <%= f.text_field :user_id %>
                      </div>

                      <div class="actions text-center">
                        <%= f.submit "Guardar", class: "btn btn-info btn-fill btn-wd" %>
                      </div>

                    <% end %>
              </div>
          </div>
      </div>
    </div>
  </div>
</div>

