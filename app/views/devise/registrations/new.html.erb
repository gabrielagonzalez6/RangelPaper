<div class="card">
  <div class="card-header-login">
    <p class="login-p">Crear una cuenta nueva</p>
  </div>
  <div class="card-body">
    <div class="form">
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <label>Nombre<strong class="form-label">*</strong></label>
          <%= f.text_field :name, { :class => "form-input" } %>
        </div>

        <div class="field">
          <label>Apellido<strong class="form-label">*</strong></label>
          <%= f.text_field :lastname, { :class => "form-input" } %>
        </div>

        <div class="field">
          <label>E-mail<strong class="form-label">*</strong></label>
          <%= f.email_field :email, { :class => "form-input" } %>
        </div>

        <div class="field">
          <label>Contraseña<strong class="form-label">*</strong></label>
          
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          
          <%= f.password_field :password, { :class => "form-input", autocomplete: "off" }  %>
        </div>

        <div class="field">
          <label>Confirmación contraseña<strong class="form-label">*</strong></label>
          <%= f.password_field :password_confirmation, { :class => "form-input", autocomplete: "off" } %>
        </div>
        <br>
        <div class="actions text-center">
          <%= f.submit "Registrarse", :class => "btn btn-primary" %>
        </div>
      <% end %>

      <br>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>