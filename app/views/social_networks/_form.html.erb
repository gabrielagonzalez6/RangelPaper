
 <div class="content">
    <%= form_for(social_network) do |f| %>

      <% if social_network.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            <span><b> Error - </b> </span>
            <ul>
            <% social_network.errors.messages.values.each do |message| %>
              <% message.each do |m| %>
                <li><%= m %></li>
              <% end %>
            <% end %>
            </ul>
          </div> 
        </div>
      <% end %>

          <div class="row">
              <div class="col-md-6">
                  <div class="form-group">
                      <div class="field">
                        <label>Nombre o Usuario <strong class="form-label">*</strong></label>
                        <%= f.text_field :name, placeholder: "rangelpaper", class: "form-control border-input" %>
                      </div>
                  </div>
              </div>
              <div class="col-md-6">
                  <div class="form-group">
                      <div class="field">
                        <label>Red Social <strong class="form-label">*</strong></label>
                        <%= f.text_field :sn_type, placeholder: "Instagram", class: "form-control border-input" %>
                      </div>
                  </div>
              </div>
          </div>
          <div class="row">
              <div class="col-md-6">
                  <div class="form-group">
                      <div class="field">
                        <label>Perfil</label>
                        <%= f.text_field :profile_id, class: "form-control border-input" %>
                      </div>
                  </div>
              </div>
          </div>

          <div class="actions text-center">
            <%= f.submit "Guardar", class: "btn btn-info btn-fill btn-wd" %>
          </div>

        <% end %>
  </div>

