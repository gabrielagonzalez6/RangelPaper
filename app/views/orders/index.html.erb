<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="header">
            <h4 class="title">Pedidos</h4>
            <p class="category">Todos los pedidos</p>
          </div>
          <div class="content table-responsive table-full-width">
            <%if @orders.empty?  %>
              <div class="alert alert-warning">
                  <span><b> Alerta - </b> No existen pedidos</span>
              </div>
            <% else %>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Pedido</th>
                    <th>Temática</th>
                    <th>Colores</th>
                    <th>Homenajeado</th>
                    <th>Edad</th>
                    <th>Entrega</th>
                    <th>Adicional</th>
                    <th colspan="3">Acción</th>
                  </tr>
                </thead>

                <tbody>
                  <% @orders.each do |order| %>
                    <tr>
                      <td><%= order.order %></td>
                      <td><%= order.theme %></td>
                      <td><%= order.color %></td>
                      <td><%= order.name %></td>
                      <td><%= order.age %></td>
                      <td><%= order.date_order %></td>
                      <td><%= order.more_info %></td>
                      <td><%= link_to 'Ver', order, class: "btn btn-info btn-fill" %></td>
                      <td><%= link_to 'Editar', edit_order_path(order), class: "btn btn-info btn-fill" %></td>
                      <td><%= link_to 'Eliminar', order, method: :delete, data: { confirm: '¿Seguro desea eliminar?' }, class: "btn btn-info btn-fill" %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            <% end %>
            <%= link_to 'Nuevo Pedido', new_order_path, class: "btn btn-info btn-fill" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
