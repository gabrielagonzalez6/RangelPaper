<div class="content">
  <%= form_for(category) do |f| %>
    
    <% if category.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
          <span><b> Error - </b> </span>
          <ul>
          <% category.errors.messages.values.each do |message| %>
            <% message.each do |m| %>
              <li><%= m %></li>
            <% end %>
          <% end %>
          </ul>
        </div> 
      </div>
    <% end %>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <div class="field">
                  <label>Nombre <strong class="form-label">*</strong></label>
                  <%= f.text_field :name, placeholder: "Invitaciones Infantiles", class: "form-control border-input" %>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="field">
                  <label>Descripci√≥n <strong class="form-label">*</strong></label>
                  <%= f.text_area :description, placeholder: "Tarjetas personalizadas para los invitados de fiestas infantiles.", class: "form-control border-input" %>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <div class="field">
                  <label>Evento <strong class="form-label">*</strong></label>
                  <%= f.collection_select :event_id, Event.all, :id, :name, {:prompt => "- Seleccionar -"}, {:class=>"form-control border-input"} %>
                </div>
            </div>
        </div>
    </div>

    <div class="actions text-center">
      <%= f.submit "Guardar", class: "btn btn-info btn-fill btn-wd" %>
    </div>

  <% end %>
</div>