    <div class="container-fluid">

      <div class="row">

          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <%= image_tag("FOTO 1.jpg", class: "carousel-img") %> 
              </div>
              <div class="carousel-item">
                <%= image_tag("FOTO 2.jpg", class: "carousel-img") %> 
              </div>
              <div class="carousel-item">
                <%= image_tag("FOTO 3.jpg", class: "carousel-img") %> 
              </div>
              <div class="carousel-item">
                <%= image_tag("FOTO 4.jpg", class: "carousel-img") %> 
              </div>
              <div class="carousel-item">
                <%= image_tag("FOTO 5.jpg", class: "carousel-img") %> 
              </div>
              <div class="carousel-item">
                <%= image_tag("FOTO 6.jpg", class: "carousel-img") %> 
              </div>
              <div class="carousel-item">
                <%= image_tag("FOTO 7.jpg", class: "carousel-img") %> 
              </div>
            </div>
