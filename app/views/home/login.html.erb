<div class="container">
  	<div class="row">
    	
    	<div class="col-md-4">
    		<%= render "shared/category" %>
    	</div>
    
    	<div class="col-md-8">
    		<h5 class="form-title">BIENVENIDA</h5>

             <% if notice %>
              <div class="alert alert-success">
                  <button type="button" aria-hidden="true" class="close" data-dismiss="alert">×</button>
                  <span><b> <%= notice %> </b></span>
              </div>
            <% elsif flash[:warning] %> 
              <div class="alert alert-danger">
                  <button type="button" aria-hidden="true" class="close">×</button>
                  <span><b> <%= flash[:warning] %> </b></span>
              </div>
            <% end %> 
    		
    		<div class="row">
	    		<div class="col">
	    			<%= render template: "devise/registrations/new" %>
	    		</div>
	    		<div class="col">
	    			<%= render template: "devise/sessions/new" %>
	    		</div>
    		</div>
 		</div>

  	</div>
</div>