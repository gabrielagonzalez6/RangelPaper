
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="header">
            <h4 class="title">Eventos</h4>
            <p class="category">Todos los eventos disponibles</p>
          </div>
          <div class="content table-responsive table-full-width">
            <%if @events.empty?  %>
              <div class="alert alert-warning">
                  <span><b> Alerta - </b> No existen eventos</span>
              </div>
            <% else %>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Nombre</th>
                    <th colspan="3">Acción</th>
                  </tr>
                </thead>

                <tbody>
                  <% @events.each do |event| %>
                    <tr>
                      <td><%= event.name %></td>
                      <td><%= link_to 'Ver', event, class: "btn btn-info btn-fill" %></td>
                      <td><%= link_to 'Editar', edit_event_path(event), class: "btn btn-info btn-fill" %></td>
                      <td><%= link_to 'Eliminar', event, method: :delete, data: { confirm: '¿Seguro desea eliminar?' }, class: "btn btn-info btn-fill" %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            <% end %>
            <%= link_to 'Nuevo Evento', new_event_path, class: "btn btn-info btn-fill btn-wd" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
