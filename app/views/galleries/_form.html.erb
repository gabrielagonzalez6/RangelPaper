  <div class="content">
      <%= form_for @gallery, url: gallery_image_path(@gallery), method: :post do |f| %>
          <% if gallery.errors.any? %>
            <div id="error_explanation">
              <div class="alert alert-danger">
                <span><b> Error - </b> </span>
                <ul>
                <% gallery.errors.messages.values.each do |message| %>
                  <% message.each do |m| %>
                    <li><%= m %></li>
                  <% end %>
                <% end %>
                </ul>
              </div> 
            </div>
          <% end %>

          <div class="row">
              <div class="col-md-6">
                  <div class="form-group">
                      <div class="field">
                        <label>Seleccionar Im√°genes <strong class="form-label">*</strong></label>
                        <%= f.file_field :image, multiple: true %>
                      </div>
                  </div>
              </div>

              <div class="col-md-6">
                  <div class="form-group">
                      <div class="field">
                        <label>Modelo <strong class="form-label">*</strong></label>
                        <%= f.collection_select :model_id, Model.all, :id, :name, {:prompt => "- Seleccionar -"}, {:class=>"form-control border-input"} %>
                      </div>
                  </div>
              </div>
          </div>

          <div class="row">
              <div class="col-md-6">
                  <div class="form-group">
                      <div class="field">
                        <label>Visibilidad <strong class="form-label">*</strong></label>
                        <%= f.check_box :status %>
                      </div>
                  </div>
              </div>
          </div>

          <div class="actions text-center">
            <%= f.submit "Guardar", class: "btn btn-info btn-fill btn-wd" %>
          </div>

        <% end %>
  </div>

